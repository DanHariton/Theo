<% include adminHead.ejs %>
<div class="login-container">
    <div class="login-form">
        <img class="logo-admin" src="/static/images/logo-admin.png" alt="theo logo">
        <h4>Sign in to admin panel</h4>
        <%if (errorAdminLogin !== null) { %>
            <div id = "error-login" class="alert alert-danger" role="alert">
                <%= errorAdminLogin %>
            </div>
        <% } %>
        <form class="login" action="/admin/login/logging" method="post">
            <div class="form-group">
                <label for="user">Login</label>
                <input name="adminLogin" type="text" class="form-control" id="admin" aria-describedby="emailHelp" placeholder="Enter login">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary admin-button">Submit</button>
        </form>
    </div>
</div>

<% include adminPanelFooter.ejs %>